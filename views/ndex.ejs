<!DOCTYPE html>
<html>
<head>
  <title>Job Portal</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Job Postings</h1>
  <% jobs.forEach(job => { %>
    <div class="job-card">
      <h2><%= job.title %></h2>
      <p><%= job.company %></p>
      <p><%= job.location %></p>
      <p>Posted: <%= job.posted_ago %></p>
      <a href="<%= job.apply_url %>" target="_blank">Apply</a>
    </div>
  <% }); %>

  <div class="pagination">
    <% if (page > 1) { %>
      <a href="/?page=<%= page - 1 %>">Prev</a>
    <% } %>
    <% if (hasNext) { %>
      <a href="/?page=<%= page + 1 %>">Next</a>
    <% } %>
  </div>
</body>
</html>
